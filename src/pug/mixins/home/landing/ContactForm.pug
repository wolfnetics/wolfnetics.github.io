append variables
  -
    var contactIntro = {
      title: 'Contact'
    }

mixin ContactForm
  +Section
    a(name='contact-form')
    +SectionTitle(contactIntro)
    div.row
      div.col-lg-6.mt-3.mx-auto
        form.contact-form
          div.mb-3
            label.form-label(for='subject') Subject
            input.form-control(name='subject' type='text' placeholder='Subject' required)
          div.mb-3
            label.form-label(for='message') Message
            textarea.form-control(name='message' type='text' placeholder='Message' style={'height': '10rem'} required)
          div.d-grid
            button.btn.btn-primary.btn-lg(type='submit') Send
        p.success-message.text-center.d-none Thank you for your message, we will be contacting you shortly...
