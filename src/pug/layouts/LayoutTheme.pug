extends Layout
include ../mixins/navbars/Navbar
include ../mixins/Variables

append variables
  - var title = 'wolfnetics'

append meta
  meta(name='description' content='wolfnetics.com')
  meta(name='theme-color' content='#660099')
  link(rel='canonical' href='https://wolfnetics.com')

prepend scripts
  link(rel='stylesheet' href='https://use.typekit.net/xju5sug.css')
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
  link(href='https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@200;300;400;600;700;900&display=swap' rel='stylesheet')

prepend styles
  link(rel="stylesheet"  crossorigin="anonymous" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==")
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")

block favicon
  link(rel="apple-touch-icon" sizes="180x180", href=`${CWD}assets/img/favicons/apple-touch-icon.png`)
  link(rel="icon" sizes="32x32" type="image/png", href=`${CWD}assets/img/favicons/favicon-32x32.png`)
  link(rel="icon" sizes="16x16" type="image/png", href=`${CWD}assets/img/favicons/favicon-16x16.png`)
  link(rel="icon", href=`${CWD}assets/img/favicons/favicon.ico`)

append footerStyles
  link(href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400&display=swap' rel='stylesheet')

block mainContent
  +Navbar
  block wrapperContent
    block beforeContent
    block content
    block afterContent
  //- +pre-footer
